blockquote {
  padding         : auto;
  line-height     : 22px;
  border-radius   : 5px;
  display         : block;
  border-color    : #78c578;
  background-color: #e6f9e6;
  padding-left    : 1em;
  margin-bottom   : 0.8em;
}

// 导航栏添加权限按钮控制
.mode {
  content:'权限';
  font-size:14px;
  position:fixed;
  top:70px;
  right:30px;
  z-index:50;
  cursor:pointer;
  background:#3eaf7c;
  border-radius:50%;
  color:#fff;
  display:block;
  width:46px;
  height: 46px;
  line-height:16px;
  text-align: center;
  display:flex;
  align-items: center;
  justify-content: center;
  transition:all ease 0.3s;
}
.mode:hover {
  background-color: #4abf8a;
  transform: rotate(360deg)
}

.hide {
  display:none!important;
}
.inlineBlock {
  display:inline-block;  
}
img {
  transition:all ease 0.3s;
}

    
